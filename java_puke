import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import org.apache.poi.ss.usermodel.Cell;
import org.apache.poi.ss.usermodel.FormulaEvaluator;
import org.apache.poi.ss.usermodel.Workbook;
import org.apache.poi.ss.usermodel.WorkbookFactory;

public class ExcelFormulaScanner {
    public static void main(String[] args) {
        File folder = new File("fileshare_path");
        List<File> formulaFiles = scanForFormulaFiles(folder);
        for (File file : formulaFiles) {
            System.out.println(file.getName());
        }
    }

    public static List<File> scanForFormulaFiles(File folder) {
        List<File> formulaFiles = new ArrayList<>();
        File[] files = folder.listFiles();
        for (File file : files) {
            if (file.isFile() && file.getName().endsWith(".xlsx")) {
                try {
                    Workbook workbook = WorkbookFactory.create(file);
                    FormulaEvaluator evaluator = workbook.getCreationHelper().createFormulaEvaluator();
                    for (int i = 0; i < workbook.getNumberOfSheets(); i++) {
                        for (Row row : workbook.getSheetAt(i)) {
                            for (Cell cell : row) {
                                if (cell.getCellType() == Cell.CELL_TYPE_FORMULA) {
                                    if (evaluator.evaluateFormulaCell(cell) != null) {
                                        formulaFiles.add(file);
                                        break;
                                    }
                                }
                            }
                        }
                    }
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
        return formulaFiles;
    }
}
